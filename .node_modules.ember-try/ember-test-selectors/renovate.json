{
  "extends": [
    "config:js-lib",
    ":automergePatch",
    ":automergeLinters",
    ":automergeTesters",
    ":dependencyDashboard",
    ":maintainLockFilesWeekly",
    ":semanticCommitsDisabled"
  ],
  "packageRules": [
    {
      "matchCurrentVersion": ">= 1.0.0",
      "updateTypes": [
        "minor"
      ],
      "automerge": true
    },
    {
      "packageNames": [
        "ember-cli",
        "ember-data",
        "ember-source"
      ],
      "separateMinorPatch": true
    }
  ]
}
