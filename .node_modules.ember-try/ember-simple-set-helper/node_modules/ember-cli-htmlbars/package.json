{
  "name": "ember-cli-htmlbars",
  "version": "4.3.1",
  "description": "A library for adding htmlbars to ember CLI",
  "keywords": [
    "ember-addon",
    "ember-cli"
  ],
  "homepage": "https://github.com/ember-cli/ember-cli-htmlbars",
  "bugs": {
    "url": "https://github.com/ember-cli/ember-cli-htmlbars/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:ember-cli/ember-cli-htmlbars.git"
  },
  "license": "MIT",
  "author": "Jonathan Jackson & Chase McCarthy",
  "files": [
    "lib/"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "ember build",
    "lint:hbs": "ember-template-lint .",
    "lint:js": "eslint --cache .",
    "start": "ember serve",
    "test": "yarn run test:ember && yarn run test:node",
    "test:ember": "ember test",
    "test:node": "mocha node-tests/*.js",
    "test:node:debug": "mocha debug node-tests/*.js"
  },
  "dependencies": {
    "@ember/edition-utils": "^1.2.0",
    "babel-plugin-htmlbars-inline-precompile": "^3.0.1",
    "broccoli-debug": "^0.6.5",
    "broccoli-persistent-filter": "^2.3.1",
    "broccoli-plugin": "^3.1.0",
    "common-tags": "^1.8.0",
    "ember-cli-babel-plugin-helpers": "^1.1.0",
    "fs-tree-diff": "^2.0.1",
    "hash-for-dep": "^1.5.1",
    "heimdalljs-logger": "^0.1.10",
    "json-stable-stringify": "^1.0.1",
    "semver": "^6.3.0",
    "strip-bom": "^4.0.0",
    "walk-sync": "^2.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/plugin-transform-typescript": "^7.8.3",
    "@babel/runtime": "^7.8.4",
    "@ember/optional-features": "^1.3.0",
    "babel-eslint": "^10.1.0",
    "babel-plugin-debug-macros": "^0.3.3",
    "broccoli-merge-trees": "^3.0.2",
    "broccoli-test-helper": "^2.0.0",
    "chai": "^4.2.0",
    "co": "^4.6.0",
    "ember-cli": "~3.15.2",
    "ember-cli-app-version": "^3.2.0",
    "ember-cli-babel": "^7.18.0",
    "ember-cli-dependency-checker": "^3.2.0",
    "ember-cli-inject-live-reload": "^2.0.2",
    "ember-cli-template-lint": "^1.0.0",
    "ember-cli-version-checker": "^3.1.3",
    "ember-export-application-global": "^2.0.1",
    "ember-load-initializers": "^2.1.1",
    "ember-maybe-import-regenerator": "^0.1.6",
    "ember-qunit": "^4.6.0",
    "ember-resolver": "^7.0.0",
    "ember-source": "~3.15.0",
    "ember-source-channel-url": "^2.0.1",
    "ember-try": "^1.4.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-ember": "^7.10.1",
    "eslint-plugin-mocha": "^6.2.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.2",
    "fixturify": "^1.2.0",
    "loader.js": "^4.7.0",
    "mocha": "^7.1.1",
    "module-name-inliner": "link:./tests/dummy/lib/module-name-inliner",
    "prettier": "^1.19.1",
    "qunit-dom": "^0.9.2",
    "release-it": "^12.4.3",
    "release-it-lerna-changelog": "^1.0.3"
  },
  "engines": {
    "node": "8.* || 10.* || >= 12.*"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "ember-addon": {
    "main": "lib/ember-addon-main.js",
    "configPath": "tests/dummy/config"
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md"
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    }
  }
}
