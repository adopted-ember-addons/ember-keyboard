{
  "name": "broccoli-plugin",
  "version": "3.1.0",
  "description": "Base class for all Broccoli plugins",
  "keywords": [
    "broccoli-plugin"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/broccolijs/broccoli-plugin"
  },
  "license": "MIT",
  "author": "Jo Liss <joliss42@gmail.com>",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "lint": "eslint *.js test/**/*.js src/**/*.ts",
    "prepare": "yarn build",
    "pretest": "multidep test/multidep.json",
    "test": "yarn build && mocha",
    "watch": "tsc --watch"
  },
  "dependencies": {
    "broccoli-node-api": "^1.6.0",
    "broccoli-output-wrapper": "^2.0.0",
    "fs-merger": "^3.0.1",
    "promise-map-series": "^0.2.1",
    "quick-temp": "^0.1.3",
    "rimraf": "^2.3.4",
    "symlink-or-copy": "^1.1.8"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.6.2",
    "@types/rimraf": "^2.0.2",
    "@types/symlink-or-copy": "^1.2.0",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "broccoli-fixturify": "^0.3.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "eslint": "^5.15.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-mocha": "^5.0.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "fixturify": "^0.3.4",
    "husky": "^3.0.0",
    "mocha": "^5.2.0",
    "multidep": "^2.0.0",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.11.1",
    "rsvp": "^4.8.4",
    "typescript": "^3.6.4"
  },
  "engines": {
    "node": "8.* || 10.* || >= 12.*"
  },
  "files": [
    "dist/"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
